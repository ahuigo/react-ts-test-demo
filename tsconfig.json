{
    "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "lib":[ "dom", "es2022" ],
      "rootDir": "src",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "jsx": "react",
      "skipLibCheck": true
    },
    "include": ["./src/**/*.tsx", "./src/**/*.ts"],
    "exclude": ["node_modules", "**/__tests__/*"]
  }
  
